<GridPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment6.Assignment6Controller">
    <stylesheets>
        <URL value="@assignment6.css"/>
    </stylesheets>
    <columnConstraints>
        <ColumnConstraints percentWidth="25.0"/>
         <ColumnConstraints percentWidth="25.0"/>
        <ColumnConstraints percentWidth="25.0"/>
         <ColumnConstraints percentWidth="25.0"/>
        
    </columnConstraints>
       
        <padding>
