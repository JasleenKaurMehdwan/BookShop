           <GridPane.margin>
            <Insets top="5" bottom="1"  />
         </GridPane.margin></TextField>
         <Button text="Search" fx:id="btnSearch" onAction="#search" GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2">
              <GridPane.margin>
            <Insets top="5" bottom="1"  />
         </GridPane.margin></Button>
         
         <TextArea fx:id="txtArea" GridPane.rowIndex="5" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="4"/>
         
         <Button text="ADD" fx:id="btnAdd" onAction="#add" GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.halignment="CENTER">
         <GridPane.margin>
            <Insets top="2" bottom="2"  />
         </GridPane.margin></Button>
          <Button text="SAVE" fx:id="btnSave"  onAction="#save" GridPane.rowIndex="0" GridPane.columnIndex="3" GridPane.halignment="CENTER">
                <GridPane.margin>
            <Insets top="2" bottom="2"  />
         </GridPane.margin></Button>
         <Button text="EXIT" fx:id="btnExit" onAction="#exit" GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.halignment="CENTER">
               <GridPane.margin>
            <Insets top="2" bottom="2"  />
         </GridPane.margin></Button>
         <Button text="WRITE" fx:id="btnWrite" onAction="#write" GridPane.rowIndex="1" GridPane.columnIndex="3" GridPane.halignment="CENTER">
              <GridPane.margin>
            <Insets top="2" bottom="2"  />
         </GridPane.margin></Button>
         <Button text="NEXT" fx:id="btnNext" GridPane.rowIndex="2" onAction="#next" GridPane.columnIndex="2" GridPane.halignment="CENTER">
               <GridPane.margin>
            <Insets top="2" bottom="2"  />
         </GridPane.margin></Button>
         <Button text="PREVIOUS" fx:id="btnPrevious" onAction="#previous" GridPane.rowIndex="2" GridPane.columnIndex="3" GridPane.halignment="CENTER">
               <GridPane.margin>
            <Insets top="2" bottom="2"  />
         </GridPane.margin></Button>
         <Button text="EDIT" fx:id="btnEdit" onAction="#edit" GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.halignment="CENTER">
               <GridPane.margin>
            <Insets top="2" bottom="2"  />
         </GridPane.margin></Button>
         <Button text="DISPLAY" fx:id="btnDisplay" onAction="#display" GridPane.rowIndex="3" GridPane.columnIndex="3" GridPane.halignment="CENTER">
